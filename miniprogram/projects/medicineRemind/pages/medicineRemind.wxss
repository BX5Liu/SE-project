/* projects/medicineRemind/pages/medicineRemind.wxss */
.contaner{
  background-color: rgba(244,245,249,1);
}

.page {
  z-index: 1;
  background-color: rgba(244,245,249,1);
  height: 812px;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-top: 70rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.box1{
  height: 160rpx;
  width: 100%;
  display: flex;
}

.border-box {
  background-image: linear-gradient(#F3F5F8, #fff);
  box-shadow: 8px 8px 20px 0px rgba(55,99,170,0.1), -8px -8px 20px 0px #fff;
  border-radius: 12px; /* 添加圆角效果 */
  background-size: 536rpx 536rpx;
  border: 3px solid rgb(159, 158, 223); /* 设置边框样式 */
  padding: 8px; /* 设置内边距 */
  width: calc(100%); /* 设置宽度减去两倍的内边距 */
  display: flex; /* 将元素设置为 Flex 容器 */
  justify-content: center; /* 在主轴上居中对齐 */
  align-items: center; /* 在交叉轴上居中对齐 */
  flex-direction: column; /* 设置元素纵向排列 */
}

.title {
  text-align: center;
  font-size: 16px;
  margin-bottom: 10px;
}

.content {
  text-align: center; /* 文本居中对齐 */
  margin-bottom: 10px; /* 设置文本与按钮之间的下边距 */
  font-size: 13px; /* 增大文本字体 */
}

.openInfo {
  margin-top: 10px; /* 设置按钮与文本之间的上边距 */
  background-color: rgb(116, 114, 228); /* 设置按钮的背景色 */
  color: #fff; /* 设置按钮的文字颜色 */
  padding: 2px 15px; /* 设置按钮的内边距 */
  border-radius: 20px; /* 添加按钮的圆角效果 */
  font-size: 10px; 
}

.input-box {
  box-shadow: 8px 8px 20px 0px rgba(55,99,170,0.1), -8px -8px 20px 0px #F3F5F8;
  border-radius: 12px; /* 添加圆角效果 */
  margin-top: 30px; /* 设置按钮与文本之间的上边距 */
  padding: 8px; /* 设置内边距 */
  width: calc(100%); /* 设置宽度减去两倍的内边距 */
}

.submit-box {
  padding: 8px; /* 设置内边距 */
  width: calc(100%); /* 设置宽度减去两倍的内边距 */
  display: flex; /* 将元素设置为 Flex 容器 */
  justify-content: center; /* 在主轴上居中对齐 */
  align-items: center; /* 在交叉轴上居中对齐 */
  flex-direction: column; /* 设置元素纵向排列 */
}

.medicine-input {
  width: 90%;
  height: 50px;
  background-color: #fff;
  border: 3px solid rgb(28, 79, 155);
  padding: 0 20px;
  font-size: 20px;
  border-radius: 20px;
  margin-bottom: 10px;
}



.submit-button {
  margin-top: 10px; /* 设置按钮与文本之间的上边距 */
  width: 30%;
  background-color: rgb(116, 114, 228);
  color: #fff;
  padding: 2px 10px; /* 设置按钮的内边距 */
  border-radius: 20px; /* 添加按钮的圆角效果 */
  font-size: 12px;
}


.row{
  z-index: 2;
  position:relative;
  margin-top: 10px;
  background-image: linear-gradient(#fff,#d4e1f5);
  height: 232rpx;
  border: 2px solid rgba(255,255,255,1);
  border-radius: 35px; /* 添加圆角效果 */
  background-size: 536rpx 536rpx;
  padding: 8px; /* 设置内边距 */
  width: calc(100%); /* 设置宽度减去两倍的内边距 */
  display: flex; /* 将元素设置为 Flex 容器 */
  justify-content: center; /* 在主轴上居中对齐 */
  align-items: center; /* 在交叉轴上居中对齐 */
  flex-direction: column; /* 设置元素纵向排列 */
}
.textbox{
  width: 100%;
  margin-bottom: 0rpx;
}
.title-row{
  text-align: center;
  z-index: 7;
  height: 44rpx;
  display: block;
  color: rgb(135, 147, 170);
  font-size: 32rpx;
  line-height: 44rpx;
  padding-bottom: 78rpx;
}
.info-row{
  text-align: center;
  z-index: 9;
  height: 80rpx;
  display: block;
  color: rgb(116, 114, 228);
  font-size: 56rpx;
  line-height: 80rpx;
}

.brow{
  display: flex;align-items: center;justify-content: center;
}


.bg{
  position:absolute;
  width: 125px;
  height: 86px;
  right: 40px;
  bottom: 22px;
}

.icon {
  display: inline-block;
  width: 16px;
  height: 16px;
  margin-right: 4px;
  color: #fff;
}